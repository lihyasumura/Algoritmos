algoritmo "ex040"

// Disciplina   : [Linguagem e Lógica de Programação]
// Professor   : Gustavo Guanabara - Cursoemvideo
// Descrição   : De 3 em 3
// Autor(a)    : Lih Yasumura

var

  N: Inteiro

inicio

  N <- 0
  Enquanto (N < 20) faca
      Escreva (N )
      N <- N + 3
  FimEnquanto
  EscrevaL (" -> Acabou!")

fimalgoritmo